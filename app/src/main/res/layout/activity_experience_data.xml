<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical">

    <include layout="@layout/activity_title"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_15"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_2"
                android:text="@string/upload_income_tax_application"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tv_select_year"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginTop="@dimen/dimen_20"
                android:background="@drawable/bg_regtangle_grey_xml"
                android:drawableRight="@drawable/ic_arrow_down"
                android:gravity="center"
                android:paddingRight="@dimen/dimen_10"
                android:text="@string/select_year" />


            <TextView
                android:id="@+id/tv_first_sheet_title"
                style="@style/textview_experient_data"
                android:text="@string/upload__year_income_tax_application" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/submit_income_first"
                    style="@style/textview_upload_sheet" />

                <TextView
                    android:id="@+id/state_income_first"
                    style="@style/textview_unsubmit" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_second_sheet_title"
                style="@style/textview_experient_data"
                android:text="@string/upload__year_income_tax_application" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/submit_income_second"
                    style="@style/textview_upload_sheet" />

                <TextView
                    android:id="@+id/state_income_second"
                    style="@style/textview_unsubmit" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_third_sheet_title"
                style="@style/textview_experient_data"
                android:text="@string/upload__year_income_tax_application" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/submit_income_third"
                    style="@style/textview_upload_sheet" />

                <TextView
                    android:id="@+id/state_income_third"
                    style="@style/textview_unsubmit" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_fourth_sheet_title"
                style="@style/textview_experient_data"
                android:text="@string/upload__year_income_tax_application" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/submit_income_fourth"
                    style="@style/textview_upload_sheet" />

                <TextView
                    android:id="@+id/state_income_fourth"
                    style="@style/textview_unsubmit" />

            </LinearLayout>

            <!--请上传三年的增值税申报表及附表-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:padding="@dimen/dimen_2"
                android:text="@string/upload_three_vat_sheet"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_vat_title_first"
                style="@style/textview_experient_data"
                android:text="@string/year_vat_sheet" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_submit_vat_first"
                    style="@style/textview_upload_sheet" />

                <TextView
                    android:id="@+id/tv_state_vat_first"
                    style="@style/textview_unsubmit" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_vat_title_second"
                style="@style/textview_experient_data"
                android:text="@string/year_vat_sheet" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_submit_vat_second"
                    style="@style/textview_upload_sheet" />

                <TextView
                    android:id="@+id/tv_state_vat_second"
                    style="@style/textview_unsubmit" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_vat_title_third"
                style="@style/textview_experient_data"
                android:text="@string/year_vat_sheet" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_submit_vat_third"
                    style="@style/textview_upload_sheet" />

                <TextView
                    android:id="@+id/tv_state_vat_third"
                    style="@style/textview_unsubmit" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_save"
                style="@style/btn_sure_pecker"
                android:layout_marginBottom="@dimen/dimen_30"
                android:background="@drawable/btn_green"
                android:text="@string/save" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
