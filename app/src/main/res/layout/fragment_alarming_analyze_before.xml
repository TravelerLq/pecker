<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimen_10">

    <TextView
        android:id="@+id/tv_annex_select_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:background="@drawable/bg_regtangle_grey_xml"
        android:drawableRight="@drawable/ic_arrow_down"
        android:gravity="center"
        android:padding="@dimen/dimen_8"
        android:paddingRight="@dimen/dimen_10"

        android:text="@string/select_year" />

    <LinearLayout
        android:id="@+id/rl_before_year_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_before_year_submit_first"
            style="@style/textview_annex_upload" />

        <TextView

            style="@style/textview_unsubmit"
            android:layout_height="@dimen/dimen_45"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="@string/upload_income_tax_annex_without_s" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_before_year_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_before_year_submit_second"
            style="@style/textview_annex_upload" />

        <TextView

            style="@style/textview_unsubmit"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="@string/upload_vat_annex" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/rl_before_year_third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_before_year_submit_third"
            style="@style/textview_annex_upload" />

        <TextView

            style="@style/textview_unsubmit"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="@string/upload_assets_balance_sheet" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_before_year_fourth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_before_year_submit_fourth"
            style="@style/textview_annex_upload" />

        <TextView
            style="@style/textview_unsubmit"
            android:layout_marginLeft="@dimen/dimen_5"
            android:text="@string/upload_profit" />

    </LinearLayout>

</LinearLayout>
